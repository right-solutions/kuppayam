<%= form_for(@import_data, :as => :document,
            :url => (@import_data.new_record? ? main_app.documents_path : main_app.document_path),
            :method => (@import_data.new_record? ? :post : :put),
            :html => {:id=>"form_document", :class=>"mb-0 form-horizontal", :multipart => true, :target => "iframe_document"}) do |f| %>

  <div class="modal-body">

    <%= @import_data.errors[:base].to_sentence %>

    <%= hidden_field_tag :redirect_url, params[:redirect_url] %>

    <%= hidden_field_tag :data_type, params[:data_type] %>

    <div class="add-photos-path">

      <div class="row">
        <div class="col-md-12">
          <%= theme_form_field(@import_data, :document, html_options: {type: 'file'}, label: "Choose File", param_name: "document") %>
        </div>
      </div>

    </div>

  </div>

  <div class="modal-footer">
    <div class="pull-right">
      
      <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>

      <%= submit_tag "Upload", "data-reset-text"=>"Upload", "data-loading-text"=>"Uploading ...", :class=>"btn btn-primary ml-10" %>
    </div>

  </div>

  <div class="cl-10"></div>

<% end %>
